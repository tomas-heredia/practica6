@model ViewModels.Pr_ModificarViewModel

@{
    ViewData["Title"] = "Proveedor Page";
}

<div >
    <form asp-controller="Proveedor" asp-action= "Actualizar" method="post">

        <legend>"Modificar Proveedor"</legend>
        
        <div class="form-group">
            <label asp-for="@Model.nombre" class="control-label"></label>
            <input asp-for="@Model.nombre" class="form-control">
            <span asp-validation-for="@Model.nombre" class="text-danger"></span>
        </div>


         <div class="form-group">
            <label asp-for="@Model.fechaAlta" class="control-label"></label>
            <input asp-for="@Model.fechaAlta" class="form-control">
            <span asp-validation-for="@Model.fechaAlta" class="text-danger"></span>

         
        <div class="form-group">
             <input type="number" value=@Model.id name="id" hidden>
            <input class="btn btn-primary" type="submit" value="Guardar" class="btn btn-info" />
        </div>
        
    </form>
        <form asp-controller="Proveedor" asp-action= "AHome" method="post">
        
        <input  class="btn btn-danger" type="submit" value="Home">
            
    </form>
</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }